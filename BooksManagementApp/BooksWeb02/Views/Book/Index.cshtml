@model IEnumerable<ConceptArchitect.BookManagement.Book>
@{
    ViewBag.ExcludeCommonCode = false;
}

<a asp-action="Add" class='btn-secondary btn btn-sm'>Add New</a>

<h2>Recommended Books</h2>

<div class="row">

    @foreach (var author in Model)
    {
        <div class='col col-md-3'>
            <div class="card" style="width: 18rem; margin-bottom:5rem">
                <img class="card-img-top" src="@author.coverphoto" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@author.title</h5>
                    <p class="card-text">author Desc</p>
                    <a asp-action="details" asp-route-id="@author.Id" class="btn  btn-primary">details</a>
                    <a asp-action="edit" asp-route-id="@author.Id" class="btn  btn-warning">edit</a>
                    <a asp-action="delete" asp-route-id="@author.Id" class="btn  btn-danger">delete</a>
                    <a asp-action="favorite" asp-route-id="@author.Id" class="btn  btn-info">Add to Favorite</a>
                    <a asp-action="review" asp-controller="review" asp-route-id="@author.Id" class="btn  btn-info">Add Review</a>
                </div>
            </div>
        </div>
    }
</div>