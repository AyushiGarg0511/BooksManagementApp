@using ConceptArchitect.BookManagement
@model Book
@{
    ViewBag.ExcludeCommonCode = false;
}
<h2>Add New Book</h2>
<p>Form was last updated at @DateTime.Now</p>
<p>@Html.ValidationSummary()</p>

<form asp-action="Edit" method="POST">

    <label asp-for="@Model.Id" class='form-label'>Id</label>
    <input type='text' name="Id" value="@Model.Id" class='form-control' readonly style="background-color:gray" />

    <label asp-for="@Model.title" class='form-label'>title</label>
    <input type='text' name="title" value="@Model.title" class='form-control' />

    <label asp-for="@Model.desc" class='form-label'>desc</label>
    <input type='text' name="desc" value="@Model.desc" class='form-control' />


    <label asp-for="@Model.authorid" class='form-label'>Author Id</label>
    <select asp-for="@Model.authorid" class="form-control">
        @foreach (var author in @ViewBag.response)
        {
            <option value="@author">@author</option>
        }
    </select>

    <label asp-for="@Model.authorname" class='form-label'>authorname</label>
    <input type='text' name="authorname" value="@Model.authorname" class='form-control' />

    <label asp-for="@Model.coverphoto" class='form-label'>coverphoto</label>
    <input type='text' name="coverphoto" value="@Model.coverphoto" class='form-control' />




    <div>

        <input type="submit" value="Edit Book" class='btn btn-warning form-control' />
    </div>
</form>
