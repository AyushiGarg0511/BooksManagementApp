@using ConceptArchitect.BookManagement
@model Book

@{
    ViewBag.ExcludeCommonCode = false;
}
<h2>About @Model.title</h2>

<div class='row'>
    <div class='col col-md-4'>
        <img src="@Model.coverphoto" class="author-details-photo" />
    </div>

    <div class='col col-md-8'>
        <h3>Description</h3>
        <p>@Model.desc</p>
    </div>
</div>
