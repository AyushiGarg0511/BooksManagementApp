

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BooksWeb02</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/boo1tstrap.min.css" asp-append-version="true" />
*@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BooksWeb02.styles.css" asp-append-version="true" />
</head>
<body class="first ">
    @if (!ViewBag.ExcludeCommonCode)
    {
        <header>
            <nav>
                <ul class="heading">
                    <li>Book Store</li>
                </ul>
                <ul>

                    <li> <a class="nav-link text-dark" asp-controller="author" asp-action="index">Authors</a></li>
                    <li> <a class="nav-link text-dark" asp-controller="author" asp-action="add">Add Authors</a> </li>
                    <li> <a class="nav-link text-dark" asp-controller="book" asp-action="index">Books</a> </li>
                    <li> <a class="nav-link text-dark" asp-controller="book" asp-action="add">Add Books</a> </li>
                    <li>
                        <a class="nav-link text-dark" asp-area=""
                           asp-controller="Home"
                           asp-action="Privacy">Privacy</a>
                    </li>
                    <li> <a class="nav-link text-dark" asp-controller="review" asp-action="index">All Reviews</a> </li>
                </ul>
                <div class="dropdown">
                    @*@if(Model.sessionname == null)
                {
                <button class="dropbtn">Members</button>
                }
                else
                {
                <button class="dropbtn">@Model.sessionname</button>
                }*@

                    <a class="nav-link text-dark" asp-controller="user" asp-action="edit">Profile</a>
                    <a class="nav-link text-dark" asp-controller="home" asp-action="index">Signout</a>
                    
                </div>
            </nav>

        </header>
    }
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-top:10rem">
        <div class="container">
            &copy; 2023 - BooksWeb02 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
